generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  role     String
  tickets  Ticket[]
  audits   Audit[]
}

model Ticket {
  id        Int      @id @default(autoincrement())
  number    String   @unique
  type      String
  status    String
  title     String
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model Audit {
  id         Int      @id @default(autoincrement())
  userId     Int
  action     String
  entityType String
  entityId   Int?
  details    String?
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
}